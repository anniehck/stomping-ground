

<%= form_for(@district) do |f| %>

<h1 class="dis-edit">EDIT DISTRICT FORM</h1>

  <% if @district.errors.any? %>
    <div id="district-errors">
      <h3><%= pluralize(@district.errors.count, "error") %> prohibited this district from being saved:</h3>
      <ul>
        <% @district.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description%><br>

  <div class="district-pic">
    <%= f.label :avatar do %>
      <%= f.file_field :avatar %>
    <% end %>
  </div>

  <%= f.submit "Update District" %>
<% end %>

<%= link_to 'Back', district_path(@district), class: "back-link" %>
