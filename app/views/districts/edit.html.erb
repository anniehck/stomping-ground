<h1 class="dis-edit">EDIT DISTRICT FORM</h1>

<%= form_for(@district) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description%><br>

  <div class="district-pic">
    <%= f.label :avatar do %>
      <%= f.file_field :avatar %>
    <% end %>
  </div>

  <%= f.submit "Update District" %>
<% end %>

<%= link_to 'Back', districts_path %>
